<div class="card">
  <img
    class="card-img-top w-100 object-fit-cover"
    height="350"
    src="<%=
  product.imageUrl %>"
    alt="<%= product.title %>"
  />
  <div class="card-body">
    <h5 class="card-title"><%= product.title %></h5>
    <p class="card-description"><%= product.description %></p>
    <div class="row align-items-center">
      <div class="col-12">
        <div class="card-description h3 mb-0 text-success fw-bold">
          <strong>$<%= product.price %></strong>
        </div>
      </div>
      <div
        class="<% if (isAuthenticated) { %> col-md-6 <% } else { %> col-12 <% } %>"
      >
        <a
          href="/shop/product-details/<%= product._id %>"
          class="btn btn-info mt-3 w-100"
        >
          Details
        </a>
      </div>
      <% if (isAuthenticated) { %>
      <div class="col-md-6">
        <%- include('../includes/add-to-cart.ejs', {product}) %>
      </div>
      <% } %>
    </div>
  </div>
</div>
